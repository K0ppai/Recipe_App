<div class="container">
  <div class="row center-container">
    <div class="col-md-6">
      <h1 class="text-center">Add a New Inventory</h1>

      <%= form_with model: @inventory, url: inventories_path, method: :post,
      html: { class: 'form', style: 'margin: 0'} do |f| %>
      <div class="form-group mb-4">
        <%= f.label :name %> <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %> <%= f.text_field :description, class:
        'form-control' %>
      </div>

      <div class="text-left mt-3">
        <%= f.submit 'Create Inventory', class: 'btn btn-primary' %>
      </div>
      <div class="text-left">
        <% end %> <%= link_to 'Back', inventories_path, class: 'btn btn-secondary btn-block mt-3' %>
      </div>
    </div>
  </div>
</div>
