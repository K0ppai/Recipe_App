<div class="container">
  <h1 class="text-center">Inventories</h1>

  <div class="row justify-content-center">
    <% @inventories.each do |inventory| %>
    <div class="col-md-4 mb-4">
      <div
        class="card"
        onclick="location.href='<%= inventory_path(inventory) %>';"
        style="cursor: pointer"
      >
        <div class="card-body">
          <h5 class="card-title"><%= inventory.name %></h5>
          <p class="card-text"><%= inventory.description %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'Add Inventory', new_inventory_path, class: 'btn btn-success' %>
  </div>
</div>
