<div>
  <h1 class="text-center"><%= @recipe.name %></h1>
  <div>
    <p>Preparation time: <%= @recipe.preparation_time %>
      <% if @recipe.preparation_time <= 1 %>
        hour
      <% else %>
        hours
      <% end %>
    </p>
    <div>
      <input type="checkbox" <% if @recipe.public %>
          checked
        <% end %>
        >
      <label>Public</label>
    </div>
  </div>
  <p>Cooking time: <%= @recipe.cooking_time %>
    <% if @recipe.preparation_time <= 1 %>
      hour
    <% else %>
      hours
    <% end %>
  </p>
  <p><%= @recipe.description %></p>
  <div>
    <%= link_to 'Generate shopping list', modal_path, data: {
      turbo_frame: 'modal'
    } %>
    <%= link_to 'Add ingredient', new_recipe_recipes_food_path(@recipe) %>
  </div>
</div>
<table class="border-2 border-collapse">
  <tr class="border-2 border-collapse">
    <th class="border-2 border-collapse">
      Food
    </th>
    <th class="border-2 border-collapse">
      Quantity
    </th>
    <th class="border-2 border-collapse">
      Value
    </th>
    <th class="border-2 border-collapse">
      Actions
    </th>
  </tr>
  <%= render partial: 'recipe_food', collection: @recipe_foods %>
</table>
