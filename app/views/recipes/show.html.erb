<section>
  <h1 class="text-center"><%= @recipe.name %></h1>
  <div>
    <p>Preparation time: <%= @recipe.preparation_time %>
      <% if @recipe.preparation_time <= 1 %>
        hour
      <% else %>
        hours
      <% end %>
    </p>
    <p>Total value counter <%= @recipe.totalvaluecounter %></p>
    <p>Food counter <%= @recipe.foodcounter %></p>
    <div>
      <%= form_with(model: @recipe, local: true, html: { method: :patch, id: 'recipe-form' }) do |form| %>
        <div class="form-check form-switch">
          <%= form.check_box :public, class: 'form-check-input', id: 'publicSwitch' %>
          <%= form.label :public, class: 'form-check-label', for: 'publicSwitch' %>
        </div>
      <% end %>
      <% if @recipe.public %>
        Public
      <% else %>
        Private
      <% end %>
    </label>
  </div>
</div>
</div>
<p>Cooking time: <%= @recipe.cooking_time %>
  <% if @recipe.preparation_time <= 1 %>
    hour
  <% else %>
    hours
  <% end %>
</p>
<% if (can? :read, @recipe) || @recipe.public %>
  <p><%= @recipe.description %></p>
  <section>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Generate shopping list
    </button>
    <% if can? :read, @recipe %>
      <%= link_to 'Add ingredient', new_recipe_recipes_food_path(@recipe) %>
    <% end %>
  </div>
  <table class="border-2 border-collapse">
    <tr class="border-2 border-collapse">
      <th class="border-2 border-collapse">
        Food
      </th>
      <th class="border-2 border-collapse">
        Quantity
      </th>
      <th class="border-2 border-collapse">
        Value
      </th>
      <th class="border-2 border-collapse">
        Actions
      </th>
    </tr>
    <%= render partial: 'recipe_food', collection: @recipe_foods %>
  </table>
<% end %>
</section>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Generating Shopping List</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h2>Choose an inventory to use</h2>
        <%= form_with url: shopping_list_path, method: :get do |form|%>
          <%= form.select :inventory_id, options_from_collection_for_select(Inventory.all, 'id', 'name'), { prompt: 'Select an inventory' }, class: 'form-control' %>
          <%= form.submit 'Generate', class: 'btn btn-primary' %>
          <%= form.hidden_field :recipe_id, value: @recipe.id %>
        <% end %>
      </div>
    </div>
  </div>
</div>
