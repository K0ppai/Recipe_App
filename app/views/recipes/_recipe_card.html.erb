<li class="border border-2 border-primary p-4 text-danger">
  <a href="<%= recipe_path(recipe_card) %>" class="flex">
    <div>
      <span class="text-2xl font-bold">
        <%= recipe_card.name %>
      </span>
    </div>
    <span class="ml-10">
      <%= recipe_card.description %>
    </span>
    <% if can? :destroy, recipe_card %>
      <%= button_to 'Remove', recipe_path(id: recipe_card), method: :delete %>
    <% end %>
  </a>
</li>
