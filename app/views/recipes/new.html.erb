<%= form_with model: @recipe, url: recipes_path do |f| %>
  <div class="flex flex-col w-[70%] mx-auto">
    <%= f.text_field :name, placeholder: 'Name' %>
    <%= f.number_field :preparation_time, placeholder: 'preparation_time' %>
    <%= f.number_field :cooking_time, placeholder: 'cooking_time' %>
    <%= f.text_area :description, placeholder: 'description' %>
    <div class="flex flex-col">
      <%= f.label :public, "Privacy" %>
      <div>
        <%= f.radio_button :public, true %>
        <%= f.label :public, "Public", class: "mr-4" %>
      </div>
      <div>
        <%= f.radio_button :public, false %>
        <%= f.label :public, "Private" %>
      </div>
    </div>
    <%= f.submit "Create" %>
  </div>
<% end %>
